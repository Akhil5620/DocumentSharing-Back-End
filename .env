# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
SERVER_PORT=8080
SERVER_CONTEXT_PATH=/api

# =============================================================================
# MONGODB CONFIGURATION
# =============================================================================
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/document_sharing_db
MONGODB_DATABASE=document_sharing_db

# MongoDB Atlas (Cloud) - Uncomment and use for production
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/document_sharing_db
# MONGODB_DATABASE=document_sharing_db

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SPRING_SECURITY_USER_NAME=admin
SPRING_SECURITY_USER_PASSWORD=admin123
SPRING_SECURITY_USER_ROLES=ADMIN

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# Use a strong, unique secret in production!
JWT_SECRET=your-super-secret-jwt-key-for-document-sharing-system-2025
JWT_EXPIRATION=86400000

# =============================================================================
# AZURE BLOB STORAGE CONFIGURATION
# =============================================================================
# Azure Storage Connection String
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol

# Azure Storage Account Details
AZURE_STORAGE_ACCOUNT_NAME=yourstorageaccount
AZURE_STORAGE_ACCOUNT_KEY=yourstoragekey
AZURE_STORAGE_CONTAINER_NAME=documents

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Maximum file upload size in bytes (10MB = 10485760 bytes)
FILE_UPLOAD_MAX_SIZE=10485760

# Allowed file types (comma-separated)
FILE_UPLOAD_ALLOWED_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,gif

# Temporary upload directory
FILE_UPLOAD_TEMP_DIR=/tmp/uploads

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Logging levels: DEBUG, INFO, WARN, ERROR
LOGGING_LEVEL_COM_DOCUMENTSHARE=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_WEB=DEBUG